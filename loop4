#include <iostream>
#include <string>
using namespace std;

int main() {
    string input;
    int count = 0;
    
    while (count < 5) {
        cout << "Enter a character: ";
        cin >> input;
        
        if (input == "n") {
            cout << "Exiting loop because 'n' was entered." << endl;
            break;
        }
        count++;
    }
    
    return 0;
}